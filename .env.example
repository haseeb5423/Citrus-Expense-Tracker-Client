# Backend API Configuration
# Use this for production deployment pointing to the Vercel backend
VITE_API_BASE_URL=https://citrus-expense-tracker.vercel.app/api

# Gemini AI API Key
# Get your key from: https://ai.google.dev/
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Firebase Configuration (for Firebase deployment)
# Get these from Firebase Console: https://console.firebase.google.com/
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_firebase_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_firebase_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id

# App Environment
VITE_APP_ENV=production
VITE_APP_NAME=NexusPay Finance
VITE_APP_VERSION=1.0.0
